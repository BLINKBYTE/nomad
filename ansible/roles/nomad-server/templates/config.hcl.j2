data_dir  = "/var/lib/nomad"

bind_addr = "0.0.0.0" # the default

datacenter = "home_network"

advertise {
  # Defaults to the first private IP address.
  http = "{{ansible_hostname}}"
  rpc  = "{{ansible_hostname}}"
  serf = "{{ansible_hostname}}:5648" # non-default ports may be specified
}

server {
  enabled          = true
  bootstrap_expect = 1
}

client {
  enabled       = true
}

plugin "raw_exec" {
  config {
    enabled = true
  }
}

consul {
  address = "0.0.0.0:8500"
}